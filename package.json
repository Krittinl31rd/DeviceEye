{
  "name": "device-eye",
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.js",
  "build": {
    "appId": "com.deviceeye.app",
    "productName": "DeviceEye",
    "files": [
      "electron/**/*",
      "renderer/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "services",
        "to": "services"
      },
      {
        "from": "store",
        "to": "store"
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "scripts": {
    "dev:renderer": "npm run dev --prefix renderer",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "build:renderer": "npm run build --prefix renderer",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:linux": "npm run build:renderer && electron-builder --linux"
  },
  "dependencies": {
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "concurrently": "^9.2.1",
    "electron-builder": "^26.4.0",
    "wait-on": "^9.0.3"
  }
}
